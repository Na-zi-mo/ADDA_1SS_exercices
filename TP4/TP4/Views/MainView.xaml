<Window x:Class="TP4.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TP4.Views"
        xmlns:viewmodels="clr-namespace:TP4.ViewModels"
        xmlns:p="clr-namespace:TP4.Properties"
        mc:Ignorable="d"
        Icon="/Resources/cloud_weather.ico"
        Title="{x:Static p:traduction.app_title}" Height="450" Width="800" Name="win" >
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodels:MeteoViewModel}">
            <local:MeteoView/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />

        </Grid.RowDefinitions>

        <Menu Width="{Binding ElementName=win, Path=ActualWidth}">
            <MenuItem Header="{x:Static p:traduction.menu_configuration}" Command="{Binding OpenConfigurationWindowCmd}" />
        </Menu>

        <ContentControl Grid.Row="1" Content="{Binding ViewModelActuel}" Margin="0, 0, 0, 0" />
    </Grid>
</Window>
